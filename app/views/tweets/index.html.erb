<h1>Most Recent Tweets</h1>

<p>Recent Tweets:</p>
<% @tweets.recent.each do |x| %>
	<p>
	<% if x.user.image_url.present? %>
		<%= link_to (image_tag x.user.image_url(:tiny_thumb).to_s), user_path(x.user.id) %>
	<% else %>
		<%= link_to image_tag("vimeo.jpg"), user_path(x.user.id) %>
	<% end %>
	<%= link_to x.user.login, user_path(x.user.id) %>, <%= x.location %>:
	"<%= x.status %>"
	| <%= x.created_at.strftime("%b %d @ %l:%M %p") %>
	<% if x.image_url.present? %>	
		| <%= link_to "image", x.image_url(:thumb).to_s %>
	<% end %>	
	</p>
<% end %>	